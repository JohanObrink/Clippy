<?xml version="1.0" encoding="utf-8" ?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

	<!-- Import Web Publishing Targets -->
	<Import Project="$(MSBuildExtensionsPath)\Microsoft\VisualStudio\v10.0\Web\Microsoft.Web.Publishing.targets" />

	<PropertyGroup>
		<ConfigurationTransform>**/Web.$(Configuration).config</ConfigurationTransform>
		<LocalTransform>**/Web.Local.config</LocalTransform>
		<BuildDependsOn>
			Transform;
			$(BuildDependsOn);
		</BuildDependsOn>
	</PropertyGroup>

	<Target Name="CreateTransformItemGroup">
		<ItemGroup>
			<TransformSources Include="$(LocalTransform)" />
			<TransformSources Include="$(ConfigurationTransform)" />
		</ItemGroup>
	</Target>

	<Target Name="Transform" DependsOnTargets="CreateTransformItemGroup">
		<Message Text="Transforming Configuration File" />
		<TransformXml Source="Web.Base.config" Transform="%(TransformSources.Identity)" Destination="$(ProjectConfigFileName)"/>
	</Target>
</Project>